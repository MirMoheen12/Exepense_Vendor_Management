@using System.Security.Principal
<!DOCTYPE html>
<html lang="zxx" class="js">

<head>
    <base href="../">
    <meta charset="utf-8">
    <meta name="author" content="Softnio">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="A powerful and conceptual apps base dashboard template that especially build for developers and programmers.">
    <!-- Fav Icon  -->
    <link rel="shortcut icon" href="./images/favicon.png">
    <!-- Page Title  -->
    <title>Cricket Association of UTTARAKHAND</title>


    <!-- StyleSheets  -->
    <link rel="stylesheet" href="~/Theme/assets/css/dashlite.css">
    <link id="skin-default" rel="stylesheet" href="~/Theme/assets/css/theme.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>

<body class="nk-body npc-default has-apps-sidebar has-sidebar ">
    <div class="nk-app-root">
        <div class="nk-apps-sidebar is-dark">
            <div class="nk-apps-brand">
                <a class="logo-link">
                    <img class="logo-light logo-img" src="~/theme/assets/images/logo.png" srcset="~/theme/assets/images/logo.png 2x" alt="logo">
                    <img class="logo-dark logo-img" src="~/theme/assets/images/logo.png" srcset="~/theme/assets/images/logo.png 2x" alt="logo-dark">
                </a>
            </div>
            <div class="nk-sidebar-element">
                <div class="nk-sidebar-body">
                    <div class="nk-sidebar-content" data-simplebar>
                        <div class="nk-sidebar-menu">
                            <!-- Menu -->
                            <ul class="nk-menu apps-menu">
                                <li class="nk-menu-item">
                                    <a href="~/InvoiceSide/AllInvoices" class="nk-menu-link" title="All Invoices">
                                        <span class="nk-menu-icon"><em class="icon ni ni-dashboard"></em></span>
                                    </a>
                                </li>

                            </ul>
                        </div>

                    </div>
                    <div class="nk-sidebar-profile nk-sidebar-profile-fixed dropdown">
                        <a href="#" data-toggle="dropdown" data-offset="50,-60">
                            <div class="user-avatar">
                                <span>@(User.Identity.Name.Length > 0 ? User.Identity.Name[0].ToString().ToUpper() : "")</span>

                            </div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-md ml-4">
                            <div class="dropdown-inner user-card-wrap d-none d-md-block">
                                <div class="user-card">
                                    <div class="user-avatar">
                                        <span>@(User.Identity.Name.Length > 0 ? User.Identity.Name[0].ToString().ToUpper() : "")</span>


                                    </div>
                                    <div class="user-info">
                                        <span class="lead-text">@User.Identity.Name</span>

                                    </div>
                                </div>
                            </div>
                            <div class="dropdown-inner">
                                <ul class="link-list">
                               
                                </ul>
                            </div>
                            <div class="dropdown-inner">
                                <ul class="link-list">
                                    <li><a href="~/Accounts/Logout"><em class="icon ni ni-signout"></em><span>Sign out</span></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- main  -->
        <div class="nk-main ">
            <!-- wrap  -->
            <div class="nk-wrap ">
                <!-- main header  -->
                <div class="nk-header nk-header-fixed is-light">
                    <div class="container-fluid">
                        <div class="nk-header-wrap">
                            <div class="nk-menu-trigger d-xl-none ml-n1">
                                <a href="#" class="nk-nav-toggle nk-quick-nav-icon" data-target="sidebarMenu"><em class="icon ni ni-menu"></em></a>
                            </div>
                            <div class="nk-header-app-name">
                                <div class="nk-header-app-logo">
                                    <em class="icon ni ni-dashlite bg-purple-dim"></em>
                                </div>
                                <div class="nk-header-app-info">
                                    <span class="sub-text"></span>
                                    <span class="lead-text">Dashboard</span>
                                </div>
                            </div>

                            <div class="nk-header-tools">
                                <ul class="nk-quick-nav">



                                    <li class="dropdown user-dropdown">
                                        <a href="" class="dropdown-toggle mr-n1" data-toggle="dropdown">
                                            <div class="user-toggle">
                                                <div class="user-avatar sm">
                                                    <em class="icon ni ni-user-alt"></em>
                                                </div>
                                            </div>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-md dropdown-menu-right">
                                            <div class="dropdown-inner user-card-wrap bg-lighter d-none d-md-block">
                                                <div class="user-card">
                                                    <div class="user-avatar">
                                                        <span>@(User.Identity.Name.Length > 0 ? User.Identity.Name[0].ToString().ToUpper() : "")</span>

                                                    </div>
                                                    <div class="user-info">
                                                        <span class="lead-text">@User.Identity.Name</span>

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="dropdown-inner">
                                                <ul class="link-list">
                                                    @*<li><a href="html/user-profile-regular.html"><em class="icon ni ni-user-alt"></em><span>View Profile</span></a></li>
                                                    <li><a href="html/user-profile-setting.html"><em class="icon ni ni-setting-alt"></em><span>Account Setting</span></a></li>
                                                    <li><a href="html/user-profile-activity.html"><em class="icon ni ni-activity-alt"></em><span>Login Activity</span></a></li>
                                                    <li><a class="dark-switch" href="#"><em class="icon ni ni-moon"></em><span>Dark Mode</span></a></li>
                                                    <li><a href=" ~ /Shared/ForgetPassword?id =@User.Id"><em class="icon ni ni-activity-alt"></em><span>Forgot Password</span></a></li>*@
                                                </ul>
                                            </div>
                                            <div class="dropdown-inner">
                                                <ul class="link-list">
                                                    <li><a href="~/Accounts/Logout"><em class="icon ni ni-signout"></em><span>Sign out</span></a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- main header -->
                <div class="nk-sidebar" data-content="sidebarMenu">
                    <div class="nk-sidebar-inner" data-simplebar>
                        <ul class="nk-menu nk-menu-md">
                            <li class="nk-menu-heading">

                            </li><!-- .nk-menu-heading -->
                            @if (User.IsInRole("Super Admin"))
                            {
                                <li class="nk-menu-item">
                                    <a href="~/ActionCenter/AllVendorForms" class="nk-menu-link">
                                        <span class="nk-menu-icon"><i class="bi bi-people-fill"></i></span>
                                        <span class="nk-menu-text">All vendors </span>
                                    </a>
                                </li>
                                <li class="nk-menu-item">
                                    <a href="~/ActionCenter/AllExpenseForms" class="nk-menu-link">
                                        <span class="nk-menu-icon"><i class="bi bi-people-fill"></i></span>
                                        <span class="nk-menu-text">All Expenses </span>
                                    </a>
                                </li>
                                <li class="nk-menu-item">
                                    <a href="~/ActionCenter/AllCostExpense" class="nk-menu-link">
                                        <span class="nk-menu-icon"><i class="bi bi-people-fill"></i></span>
                                        <span class="nk-menu-text">All Cost Expense</span>
                                    </a>
                                </li>
                            }
                            <li class="nk-menu-item">
                                    <a href="~/AllForms/VendorForm" class="nk-menu-link">
                                        <span class="nk-menu-icon"><i class="bi bi-people-fill"></i></span>
                                        <span class="nk-menu-text">Vendor Form</span>
                                    </a>
                                </li>
                                <li class="nk-menu-item">
                                <a href="~/AllForms/ExpenseForm" class="nk-menu-link">
                                        <span class="nk-menu-icon"><i class="bi bi-person-fill-add"></i></span>
                                    <span class="nk-menu-text">Expense Form</span>
                                    </a>
                                </li>
                                <li class="nk-menu-item">
                                <a href="~/AllForms/CostExpenseForm" class="nk-menu-link">
                                        <span class="nk-menu-icon"><i class="bi bi-person-fill-add"></i></span>
                                    <span class="nk-menu-text">Cost Expense Center</span>
                                    </a>
                                </li>
                

                      
             

                        </ul><!-- .nk-menu -->
                    </div>
                </div>
                @RenderBody()
                <!-- content -->
            </div>
            <!-- wrap  -->
        </div>
        <!-- main  -->
    </div>
    <!-- app-root  -->
    <!-- JavaScript -->

    <script src="~/Theme/assets/js/bundle.js"></script>
    <script src="~/Theme//assets/js/scripts.js"></script>

</body>

</html>