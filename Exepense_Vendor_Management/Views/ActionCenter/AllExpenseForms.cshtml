@model IEnumerable<Expense_Vendor_Management.Models.EmployeeExpense>

@{
    ViewData["Title"] = "AllVendorForms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .buttons-pdf {
        display: none;
    }
</style>

<div class="nk-block nk-block-lg">
    <div class="nk-block-head">
        <div class="nk-block-head-content">
            <br />
         

        </div>
    </div>
    <div class="card card-preview">
        <div class="card-inner" style="background-color:#efe5e2;">
            <h5 class="nk-block-title"> @ViewBag.Name's History</h5>
            <table class="datatable-init-export nowrap table">
                <thead style="color:#241c4f">
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                           Vendor Name
                        </th>
                        <th>
                            Category
                        </th>
               

                        <th>
                            Amount

                        </th>
                        <th>
                          Submitted Date

                        </th>
                        <th>
                            Status

                        </th>

                        <th>Details</th>
                    </tr>
                </thead>
                <tbody style="color:#241c4f">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Vid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.vandorName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.expenseCategory)
                            </td>


                            <td>
                               $@Html.DisplayFor(modelItem => item.amount)
                            </td>

                            <td>
                                @item.createdOn.ToShortDateString()
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.status)
                            </td>


                            <td>
                                <a href="~/ActionCenter/ExpenseactionCenter?ID=@item.id">
                                    Details
                                </a>


                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div><!-- .card-preview -->

</div>

<script type="text/javascript">

    function DeleteInvoice(id) {

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!'
        }).then(function (result) {
            if (result.value) {
                $.ajax({
                    url: '/InvoiceSide/DeleteInvoice'
                    , type: 'GET'
                    , data: { id: id }
                    , contentType: 'application/json'
                    , success: function (response) {

                        Swal.fire('Deleted!', 'Your file has been deleted.', 'success');
                        location.reload();
                    }
                });

            }
        });

    }

</script>








