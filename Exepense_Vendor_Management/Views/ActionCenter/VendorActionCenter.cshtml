@model Expense_Vendor_Management.Models.Vendor
@{
    ViewData["Title"] = "VendorActionCenter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        margin-top: 20px;
    }

    .comment-section {
        margin: 20px;
        padding: 20px;
        border: 1px solid #ccc;
        background-color: #f9f9f9;
    }

    .comment-form {
        margin-top: 20px;
    }

        .comment-form label,
        .comment-form input,
        .comment-form textarea,
        .comment-form button {
            display: block;
            width: 100%;
            box-sizing: border-box;
            margin-bottom: 10px;
            font-size: 16px;
            line-height: 1.5;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .comment-form label {
            font-weight: bold;
        }

        .comment-form button {
            background-color: #6576ff;
            color: white;
            border: none;
            cursor: pointer;
        }

            .comment-form button:hover {
                background-color: #4d61ff;
            }

    .comment {
        margin: 10px 0;
        padding: 10px;
        border: 1px solid #ccc;
        background-color: #fff;
    }

    .comment-author {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .comment-date {
        font-size: 12px;
        color: #999;
        margin-bottom: 5px;
    }

    .comment-content {
        font-size: 16px;
        line-height: 1.5;
    }

    @@media screen and (max-width: 600px) {
        .comment-section {
            margin: 10px;
            padding: 10px;
        }

        .comment-form label,
        .comment-form input,
        .comment-form textarea,
        .comment-form button {
            font-size: 14px;
            padding: 8px;
        }

        .comment {
            margin: 5px 0;
            padding: 5px;
            font-size: 14px;
        }

        .comment-author {
            font-size: 14px;
        }

        .comment-date {
            font-size: 10px;
        }

        .comment-content {
            font-size: 14px;
        }
    }
</style>
<div class="nk-block">
    <div class="card card-bordered">
        <div class="card-aside-wrap">
            <div class="card-content">
                <ul class="nav nav-tabs nav-tabs-mb-icon nav-tabs-card">
                    <li class="nav-item">
                        <a class="nav-link active" href="AllForms/EditVendorForm?id=@Model.id"><span>Edit<em class="icon ni ni-edit"></em></span></a>
                    </li>

                </ul><!-- .nav-tabs -->
                <div class="card-inner">
                    <div class="nk-block">
                            <div class="profile-ud-list">
                            <div class="profile-ud-item">
                                <div class="profile-ud wider">
                                    <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">Vendor ID</span>
                                    <span class="profile-ud-value" style="color:#241c4f">@Model.id</span>
                                </div>
                            </div>
                            <div class="profile-ud-item">
                                <div class="profile-ud wider">
                                    <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">Vendor Name</span>
                                    <span class="profile-ud-value" style="color:#241c4f">@Model.vendorName</span>
                                </div>
                            </div>
                            <div class="profile-ud-item">
                                <div class="profile-ud wider">
                                    <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">Cost Center </span>
                                    <span class="profile-ud-value" style="color:#241c4f">@Model.costCenter</span>
                                </div>
                            </div>
                            <div class="profile-ud-item">
                                <div class="profile-ud wider">
                                    <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">Service Type</span>
                                    <span class="profile-ud-value" style="color:#241c4f">@Model.poductType</span>
                                </div>
                            </div>
                            <div class="profile-ud-item">
                                <div class="profile-ud wider">
                                    <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">Category</span>
                                    <span class="profile-ud-value" style="color:#241c4f">@Model.catagory</span>
                                </div>
                                
                            </div>

                            <div class="profile-ud-item">
                                <div class="profile-ud wider">
                                    <span class="profile-ud-label" style="color:#241c4f" style="color:#241c4f">Renewal Period</span>
                                    <span class="profile-ud-value" style="color:#241c4f">@Model.renewalPeriod</span>
                                </div>

                            </div>

                            <div class="profile-ud-item">
                                <div class="profile-ud wider">
                                    <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">Critical Vendor</span>
                                    <span class="profile-ud-value" style="color:#241c4f">@Model.criticalVendor</span>
                                </div>
                            </div>
                            <div class="profile-ud-item">
                                <div class="profile-ud wider">
                                    <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">Payment Amount</span>
                                    <span class="profile-ud-value" style="color:#241c4f">$@Model.paymentAmount .00 </span>
                                </div>
                            </div>
                            <div class="profile-ud-item">
                                <div class="profile-ud wider">
                                    <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">Auto Payment</span>
                                    <span class="profile-ud-value" style="color:#241c4f">@Model.autoPayment</span>
                                </div>
                            </div>
                          
                            <div class="profile-ud-item">
                                <div class="profile-ud wider">
                                    <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">Contract Expiration</span>
                                    <span class="profile-ud-value" style="color:#241c4f">@Model.contractExpiration.ToShortDateString()</span>
                                </div>
                            </div>
                            <div class="profile-ud-item">
                                <div class="profile-ud wider">
                                    <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">Auto Renew</span>
                                    <span class="profile-ud-value" style="color:#241c4f">@Model.autoRenew</span>
                                </div>
                            </div>
                            <div class="profile-ud-item">
                                <div class="profile-ud wider">
                                    <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">Cancel Date</span>
                                    <span class="profile-ud-value" style="color:#241c4f">@Model.dateToCancel.ToShortDateString()</span>
                                </div>
                            </div>
                                    <div class="profile-ud-item">
                                <div class="profile-ud wider">
                                    <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">Technology Vendor</span>
                                    <span class="profile-ud-value" style="color:#241c4f">@(Model.TechnolgyVendor == true ? "Yes" : "No")</span>
                                </div>
                            </div>
                            <div class="profile-ud-item">
                                <div class="profile-ud wider">
                                    <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">PII Access To Vendor</span>
                                    <span class="profile-ud-value" style="color:#241c4f">@(Model.CustomerAccess == true ? "Yes" : "No")</span>
                                </div>
                            </div>
                            @if (Model.ContactName != null)
                            {
                                <div class="profile-ud-item">
                                    <div class="profile-ud wider">
                                        <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">Contact Name</span>
                                        <span class="profile-ud-value" style="color:#241c4f">@(Model.ContactName)</span>
                                    </div>
                                </div>
                                <div class="profile-ud-item">
                                    <div class="profile-ud wider">
                                        <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">Contact Email</span>
                                        <span class="profile-ud-value" style="color:#241c4f">@(Model.ContactEmail)</span>
                                    </div>
                                </div>
                                <div class="profile-ud-item">
                                    <div class="profile-ud wider">
                                        <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">Contact Phone</span>
                                        <span class="profile-ud-value" style="color:#241c4f">@(Model.ContactPhone)</span>
                                    </div>
                                </div>
                                <div class="profile-ud-item">
                                    <div class="profile-ud wider">
                                        <span class="profile-ud-label" style="color:#241c4f" style="color:#241c4f">Renewal Notfication</span>
                                        <span class="profile-ud-value" style="color:#241c4f">@(Model.RNotfication)</span>
                                    </div>
                                </div>
                                <div class="profile-ud-item">
                                    <div class="profile-ud wider">
                                        <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">Contact Website</span>
                                        <span class="profile-ud-value" style="color:#241c4f">@(Model.ContactWebsite)</span>
                                    </div>
                                </div>
                            }
                
             
               
                        </div><!-- .profile-ud-list -->
                    </div><!-- .nk-block -->
                    <div class="nk-block">
                        <div class="nk-block-head nk-block-head-line">
                            <h6 class="title overline-title text-base">Vendor Management Internal team</h6>
                        </div><!-- .nk-block-head -->
                        <form method="post" asp-action="VendorActionCenter" asp-controller="ActionCenter" id="reqforupdateinvoice" enctype="multipart/form-data">
                            <div class="profile-ud-list">
                               <input hidden name="ID" value="@Model.id" />
                                <div class="profile-ud-item">
                                </div>
                            </div>
                            <div class="row g-4">
                                <div class="col-lg-6">
                                    <div class="profile-ud wider">
                                        <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">Status</span>
                                        <span class="profile-ud-value" style="color:#241c4f">
                                            <select required name="Fstatus" id="FormStatus" type="text" class="form-control">
                                                <option value="">Select Status</option>
                                                <option value="Active">Active</option>
                                                <option value="In-Active">In-Active</option>
                                                <option value="Active-To Be Cancelled">Active-To Be Cancelled</option>
                                                <option value="On-boarding">On-boarding</option>
                                                <option value="Denied">Denied</option>
                                                <option value="Terminated for Cause">Trminated for Cause</option>
                                           
                                            </select>
                                        </span>

                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="profile-ud wider">
                                        <span class="profile-ud-label" style="color:#241c4f">Renewal Notfication</span>
                                        <span class="profile-ud-value" style="color:#241c4f">
                                          <select class="form-select" name="RNotfication[]" multiple="multiple" data-placeholder="Select Multiple options">
                                                <option value="">Select Status</option>
                                                <option value="Accounting">Accounting</option>
                                                <option value="HR">HR</option>
                                                <option value="IT Team">IT Team</option>
                                                <option value="Submitter">Submitter</option>
                                            </select>
                                        </span>

                                    </div>
                                </div>
                       


                           
       
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label class="form-label" style="color:#241c4f" for="full-name-1">Remarks</label>
                                        <div class="form-control-wrap">
                                            <textarea type="text" required name="Remarks" class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row g-4" id="ApprovalDoc">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-label" style="color:#241c4f" for="full-name-1">Approval DOc</label>
                                        <div class="form-control-wrap">
                                            <input type="file" id="Approvaldocfile" name="file" class="form-control">
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="profile-ud-item">
                                <div class="profile-ud wider">
                                    <span class="profile-ud-label" style="color:#241c4f"style="color:#241c4f">
                                        <button type="submit" class="btn btn-primary">Update</button>
                                    </span>

                                </div>
                            </div>
                            <!-- .profile-ud-list -->
                        </form>
                    </div><!-- .nk-block -->

                    <div class="nk-divider divider md"></div>

                </div><!-- .card-inner -->
            </div><!-- .card-content -->

        </div><!-- .card-aside-wrap -->

   
    </div><!-- .card -->
    <div class="card card-preview">
        <div class="card-inner">
            <div class="nk-block-head">
                <div class="nk-block-head-content">
                    <ul class="nav nav-tabs nav-tabs-mb-icon nav-tabs-card">
                        <li class="nav-item">
                            <a class="nav-link active"><em class="icon ni ni-user-circle"></em><span>Invoice Documents</span></a>
                        </li>
                    </ul>
                </div>
            </div>
            <table class="datatable-init-export nowrap table">
                <thead>
                    <tr>
                        <th>File Name</th>
                        <th>Attachment</th>
                        <th>Created By</th>
                  
                  
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < ViewBag.Media.Count; i++)
                    {
                        <tr>

                            <td>
                                @ViewBag.Media[i].fileName
                            </td>
                            <td>
                                <a href="#">
                                    <em style="font-size:32px" class="icon ni ni-file-pdf"></em>
                                </a>
                            </td>
                    
                            <td>
                                @ViewBag.Media[i].createdBy
                            </td>
                
                      
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<script>
    document.getElementById("reqforupdateinvoice").addEventListener("submit", function (event) {
        var fileInput = document.getElementById("Finreqid");
        if (fileInput.files.length > 0 && fileInput.files[0].size > 20 * 1024 * 1024) {
            event.preventDefault(); // Prevent the form from being submitted
            alert("File size exceeds the limit of 20MB. Please choose a smaller file.");
        }

    });
</script>

<script type="text/javascript">
    $(document).ready(function () {
    
        $("#ApprovalDoc").hide();
        $("#FormStatus").change(function () {
            var instatus = this.value;
            if (instatus == 'Active') {
                $("#ApprovalDoc").show();
                $("#Approvaldocfile").attr("required", true);
            }


        });
    });
</script>

